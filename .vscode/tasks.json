{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "./src/main.cpp",
                "./src/video.cpp",
                "./src/geometry.cpp",
                "-o./build/game.exe",
                "-L./libs",
                "-I./include",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-Wall",
                "-Wextra",
                "-std=c++17",
                "-O3"
            ]
        }
    ]
}